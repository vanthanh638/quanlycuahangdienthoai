        <intercept-url pattern="/**" access="permitAll()" />
 
        <access-denied-handler error-page="/403" />
 
        <form-login login-page='/login' login-processing-url="/login"
            default-target-url="/admincp" always-use-default-target="false"
            authentication-failure-url="/admincp/login?error=loginErr" username-parameter="username"
            password-parameter="password" />
 
        <logout logout-url="/logout" logout-success-url="/login"
            delete-cookies="JSESSIONID" invalidate-session="true" />
 
    </http>
    
    
    <authentication-manager>
        <!-- authentication from database -->
        <authentication-provider>
           	<password-encoder hash="md5" /> 
            
            <jdbc-user-service data-source-ref="myDataSource"
                users-by-username-query="select username, password, active from user where username = ?"
                authorities-by-username-query="select username, concat('ROLE_', role) role from user INNER JOIN role ON user.id_role = role.id_role where username = ?" />
        </authentication-provider>
    </authentication-manager>

